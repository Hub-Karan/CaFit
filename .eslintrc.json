{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": "off",
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "react/self-closing-comp": "error",
        "react/no-multi-comp": "error",
        "react/jsx-pascal-case": "error",
        "react/jsx-closing-tag-location": "warn",
        "react/jsx-wrap-multilines": "warn"
    }
}
